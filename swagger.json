{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Swagger API documentation",
        "description": "Documentation for all API routes"
    },
    "schemes": [
        "http"
    ],
    "host": "localhost:3000",
    "basePath": "/",
    "paths": {
        "/": {
            "get": {
                "tags": [
                    "API routes"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Base url to inform that a customer guid is necessary to access information via the url",
                "description": "Simple base url page which just informs the user they need to enter a customer guid into the url to access their account information.",
                "responses": {
                    "200": {
                        "description": "Simple base url page which just informs the user they need to enter a customer guid into the url to access their account information.",
                        "schema": {
                            "type": "array",
                            "items": {
                                "properties": {}
                            }
                        }
                    }
                }
            }
        },
        "/{customerid}": {
            "get": {
                "tags": [
                    "API routes"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Gets all customer information based on customer guid",
                "description": "Returns a list containing all accounts for that customer guid.",
                "parameters": [
                    {
                        "name": "customerid",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of accounts based on customer guid",
                        "schema": {
                            "type": "array",
                            "items": {
                                "properties": {
                                    "id": {
                                        "type": "string"
                                    },
                                    "firstname": {
                                        "type": "string"
                                    },
                                    "lastname": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "telephone": {
                                        "type": "string"
                                    },
                                    "balance": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/{customerid}/balance/{accountid}": {
            "get": {
                "tags": [
                    "API routes"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Gets balance of specific account based on account guid",
                "description": "Returns a list containing the balance of a specific account guid inside a customer guid.",
                "parameters": [
                    {
                        "name": "customerid",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "accountid",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returns balance of specific account",
                        "schema": {
                            "type": "array",
                            "items": {
                                "properties": {
                                    "balance": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/{customerid}/details/{accountid}": {
            "get": {
                "tags": [
                    "API routes"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Gets account details based on account guid",
                "description": "Returns a list containing account infromation for specific account guid for that customer guid.",
                "parameters": [
                    {
                        "name": "customerid",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "accountid",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returns a list containing account infromation for specific account guid for that customer guid.",
                        "schema": {
                            "type": "array",
                            "items": {
                                "properties": {
                                    "First Name": {
                                        "type": "string"
                                    },
                                    "Last Name": {
                                        "type": "string"
                                    },
                                    "Email": {
                                        "type": "string"
                                    },
                                    "Telephone": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/{customerid}/accounts/overdrawn": {
            "get": {
                "tags": [
                    "API routes"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Gets overdrawn accounts that are currently in the stored customer guid",
                "description": "Gets a list of overdrawn accounts for customer guid.",
                "parameters": [
                    {
                        "name": "customerid",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of IDs with accounts overdrawn",
                        "schema": {
                            "type": "array",
                            "items": {
                                "properties": {
                                    "id": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/{customerid}/customer/details/{accountid}": {
            "get": {
                "tags": [
                    "API routes"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Gets account details based on account guid for a customer view",
                "description": "Returns account information for specific account guid available for that customer.",
                "parameters": [
                    {
                        "name": "customerid",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "accountid",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returns details of specific account for a customer view",
                        "schema": {
                            "type": "array",
                            "items": {
                                "properties": {
                                    "First Name": {
                                        "type": "string"
                                    },
                                    "Last Name": {
                                        "type": "string"
                                    },
                                    "Email": {
                                        "type": "string"
                                    },
                                    "Balance": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/{customerid}/customer/account": {
            "get": {
                "tags": [
                    "API routes"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Gets account details based on optional firstname  and or lastname parameters",
                "description": "Returns the accounts matching firstname and or lastname.",
                "parameters": [
                    {
                        "name": "customerid",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "firstname",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "lastname",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returns details of specific accounts based on first and or last name to a best match in input fields",
                        "schema": {
                            "type": "array",
                            "items": {
                                "properties": {
                                    "confidenceMetric" {
                                        "type": "string"
                                    },
                                    "inputFirstName": {
                                        "type": "string"
                                    },
                                    "inputLastname": {
                                        "type": "string"
                                    },
                                    "possibleFirstName": {
                                        "type": "string"
                                    },
                                    "possibleLastName": {
                                        "type": "string"
                                    },
                                    "id": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/{customerid}/customer/account/balance": {
            "get": {
                "tags": [
                    "API routes"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Gets account details based on optional minamount and or maxamount",
                "description": "Returns the accounts matching minamount and or maxamount.",
                "parameters": [
                    {
                        "name": "customerid",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "minamount",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "maxamount",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returns details of specific accounts based on min and or max amounts",
                        "schema": {
                            "type": "array",
                            "items": {
                                "properties": {
                                    "id": {
                                        "type": "string"
                                    },
                                    "balance": {
                                        "type": "integer"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}